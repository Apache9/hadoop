    <Console name="test" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{ABSOLUTE} %5p %c{1}:%L - %m%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="org.apache.hadoop.security.authentication" level="DEBUG">
      <AppenderRef ref="test"/>
    </Logger>
  </Loggers>
</Configuration>
